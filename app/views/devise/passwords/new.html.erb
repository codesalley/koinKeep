<h2 class="text-center p-2 w-screen text-gray-50 heading-color font-black leading-9">Forgot your password?</h2>
<div class="password-reset w-2/3 mx-auto md:w-1/3 mt-10 ">



<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field  mb-3 flex flex-col">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'border-2 border-blue-200 rounded focus:border-blue-500 '%>
  </div>

  <div class="actions  mb-3 flex flex-col">
    <%= f.submit "Confirmation email", class: 'p-2 rounded heading-color text-gray-50' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>
