
<h2  class="text-center p-2 w-screen text-gray-600 bg-green-100 font-black leading-9">Sign up</h2>

<div class="sign-up  flex w-2/3 flex-col md:w-1/3 mt-10 mx-auto">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3 flex flex-col">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'border-2 border-green-200 rounded focus:border-green-500 ' %>
  </div>

  <div class="field mb-3 flex flex-col">
    <%= f.label :avatar %>
    <%= f.file_field :avatar, autofocus: true %>
  </div>

  <div class="field mb-3 flex flex-col">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border-2 border-green-200 rounded focus:border-green-500 ' %>
  </div>

  <div class="field mb-3 flex flex-col">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: 'border-2 border-green-200 rounded focus:border-green-500 ' %>
  </div>

  <div class="field mb-3 flex flex-col">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'border-2 border-green-200 rounded focus:border-green-500 ' %>
  </div>

  <div class="actions mb-3 flex flex-col">
    <%= f.submit "Sign up", class: 'p-2 rounded bg-green-100 text-gray-500' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
