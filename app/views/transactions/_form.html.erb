<div class="new-transaction w-2/3 md:w-1/3 mt-10 mx-auto">
    <%= form_with model: transaction do |form|  %>
    <div class="mb-3 flex flex-col">
        <%= form.label :name, "Transaction Name" %>
        <%= form.text_field :name, class: 'border-2 name border-blue-200 rounded focus:border-blue-500 ' %>
    </div>
    <div class="mb-3 flex flex-col">
        <%= form.label :amount, "Amount " %>
        <%= form.number_field :amount, class: 'amount border-2 border-blue-200 rounded focus:border-blue-500 ' %>
    </div>
    <div class="mb-3 flex flex-col">
        <%= form.submit 'Add Transaction' ,  class: 'p-2 rounded bg-blue-100 text-gray-500'%>
    </div>
    <% end %>
</div>